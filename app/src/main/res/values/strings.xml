<resources>
    <string name="app_name">PopularMovies</string>
    <string name="action_settings">Settings</string>

    <!-- The base URL that will be used to query The Movie DB web services -->
    <string name="base_url_image_retrieval">http://image.tmdb.org/t/p/w185</string>
    <string name="base_url_backdrop_image_retrieval">http://image.tmdb.org/t/p/w500</string>
    <string name="base_url_data_request">https://api.themoviedb.org/3/discover/movie?sort_by=</string>
    <string name="base_url_trailer_request">https://api.themoviedb.org/3/movie/%1$d/videos</string>
    <string name="base_url_review_request">https://api.themoviedb.org/3/movie/%1$d/reviews</string>
    <string name="part_url_api_key">&amp;api_key=</string>
    <string name="part_url_api_key_dude">api_key=</string>

    <string name="intent_youtube_string">http://www.youtube.com/watch?v=</string>

    <string name="title_activity_movie_details">Movie Details</string>
    <string name="popularity_label_string">Popularity</string>
    <string name="votes_label_string">Rating:</string>
    <string name="trailers_label_string">Trailers:</string>

    <string name="formatted_movie_title">%1$s (%2$s)</string>
    <string name="formatted_popularity_string">: %1$d%%</string>
    <string name="formatted_votes_string">: %1$s/10 (%2$d votes)</string>

    <string name="service_request_failure_message">Error occurred while requesting movie data</string>

    <string name="content_description_movie_poster">This is the movie poster image`</string>
    <string name="content_description_movie_backdrop">This is the movie backdrop image</string>

    <string name="full_review_string">Full Review</string>

    <string name="title_activity_reviews">Movie Reviews</string>

    <string name="share_trailer_item">Share Trailer</string>
    <string name="blank_details_string">There is no movie details to display.\nPlease choose a movie.</string>

    <!-- Strings related to Settings/Preferences -->
    <string name="title_activity_settings">Settings</string>

    <!-- Beginning of General settings -->
    <string name="pref_header_general">General</string>
    <string name="sorting_preference_type_key">sorting_list</string>
    <string name="sorting_preference_type_title">Movie sorting order</string>

    <string name="popularity_title">Popularity</string>
    <string name="popularity_title_value">popularity.desc</string>

    <string name="vote_average_title">Voting Average</string>
    <string name="vote_average_title_value">vote_average.desc</string>

    <string name="favorites_title">Favorites</string>
    <string name="favorites_title_value">favorites.desc</string>

    <string name="default_sorting_preference">@string/popularity_title</string>
    <string name="default_sorting_preference_value">@string/popularity_title_value</string>

    <string-array name="movie_sorting_preference_titles">
        <item>@string/popularity_title</item>
        <item>@string/vote_average_title</item>
        <item>@string/favorites_title</item>
    </string-array>
    <string-array name="movie_sorting_preference_values">
        <item>@string/popularity_title_value</item>
        <item>@string/vote_average_title_value</item>
        <item>@string/favorites_title_value</item>
    </string-array>

</resources>
